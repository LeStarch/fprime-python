<commands>
  <command kind="async" opcode="0x00" mnemonic="Settings">
    <comment>Signal Generator Settings</comment>
    <args>
      <arg 
        type="U32"
        name="Frequency">
      </arg>
      <arg
        type="F32"
        name="Amplitude">
      </arg>
      <arg
        type="PyApp::SignalType"
        name="SigType">
      </arg>
    </args>
  </command>
  <command kind="async" opcode="1" mnemonic="Toggle">
    <comment>Toggle Signal Generator On/Off.</comment>
  </command>
</commands>
